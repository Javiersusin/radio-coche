<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nueva emisora"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe la frecuencia y la detectamos"
        android:textColor="@color/text_muted"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"/>

    <!-- Frequency input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRECUENCIA (MHz)"
        android:textColor="@color/accent_primary"
        android:textSize="10sp"
        android:letterSpacing="0.3"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:id="@+id/etFrequency"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:hint="Ej: 95.0"
        android:hintTextColor="@color/text_dim"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:fontFamily="sans-serif-light"
        android:inputType="numberDecimal"
        android:maxLength="6"/>

    <!-- Auto-detected name feedback -->
    <TextView
        android:id="@+id/tvAutoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent_primary"
        android:textSize="12sp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <!-- Name input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE (opcional, se rellena solo)"
        android:textColor="@color/accent_primary"
        android:textSize="10sp"
        android:letterSpacing="0.3"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="6dp"/>

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/bg_input"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:hint="Se rellena automÃ¡ticamente"
        android:hintTextColor="@color/text_dim"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:inputType="textCapWords"
        android:maxLength="30"/>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="28dp"
        android:gravity="end">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Cancelar"
            android:textColor="@color/text_muted"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Guardar"
            android:textColor="@color/bg_deep"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/bg_btn_save"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</LinearLayout>
