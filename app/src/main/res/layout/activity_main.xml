<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_deep">

    <!-- Left Panel: Header + Add Button -->
    <LinearLayout
        android:id="@+id/leftPanel"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="28dp"
        android:paddingEnd="20dp"
        android:paddingTop="28dp"
        android:paddingBottom="24dp"
        android:background="@color/bg_panel">

        <!-- App logo / title -->
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RADIO"
            android:textColor="@color/accent_primary"
            android:textSize="11sp"
            android:letterSpacing="0.4"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/appSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritas"
            android:textColor="@color/text_primary"
            android:textSize="26sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="2dp"/>

        <!-- Divider -->
        <View
            android:layout_width="32dp"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Station count -->
        <TextView
            android:id="@+id/stationCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 emisoras"
            android:textColor="@color/text_muted"
            android:textSize="12sp"
            android:fontFamily="sans-serif"/>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Add Button -->
        <LinearLayout
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_btn_add"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="+"
                android:textColor="@color/accent_primary"
                android:textSize="22sp"
                android:gravity="center"
                android:fontFamily="sans-serif-light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nueva emisora"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:fontFamily="sans-serif"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Right Panel: Stations list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/leftPanel"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"/>

    <!-- Empty state -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/leftPanel"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="◉"
            android:textColor="@color/text_muted"
            android:textSize="36sp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sin favoritas todavía"
            android:textColor="@color/text_muted"
            android:textSize="16sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulsa + para añadir tu primera emisora"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:layout_marginTop="6dp"/>

    </LinearLayout>

</RelativeLayout>